<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".Login">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="421dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="#4F2A91"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/login_icon" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="@font/cakecafe"
                android:id="@+id/loginText"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#4F2A91"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/lavender"

                android:fontFamily="@font/cakecafe"
                android:id="@+id/email_txt_login"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="E-mail"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/password_signup_other"
                android:textColorHint="@color/lavender"
                android:fontFamily="@font/cakecafe"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:hint="Password"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Login"

                android:id="@+id/logbtn"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#4F2A91"
                app:cornerRadius = "20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="━━━━━━ OR ━━━━━━"
                android:textSize="18sp"
                android:fontFamily="@font/cakecafe"
                android:textColor="@color/lavender"
                android:textAlignment="center"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="SignUp"
                android:id="@+id/signup_btn"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#4F2A91"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>