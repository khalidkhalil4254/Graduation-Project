<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".Register_Form">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Required information"
                android:id="@+id/loginText"
                android:textSize="36sp"
                android:fontFamily="@font/cakecafe"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#4F2A91"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/lavender"
                android:fontFamily="@font/cakecafe"
                android:id="@+id/email_req_cp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="E-mail"

                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/id_signup_other_phone"
                android:textColorHint="@color/lavender"
                android:fontFamily="@font/cakecafe"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter Your Phone number "
                android:inputType="number"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>

            <EditText
                android:fontFamily="@font/cakecafe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/lavender"
                android:id="@+id/password_signup_other"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:hint="Password"
                android:textColor="@color/black"
                android:drawablePadding="8dp"/>


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="314dp"
                android:layout_height="68dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cakecafe"
                android:text="Keep me updated on more events and news from this event organizer."
                android:textSize="15sp"
                android:textColor="#4F2A91"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="314dp"
                android:layout_height="68dp"
                android:fontFamily="@font/cakecafe"
                android:textColor="#4F2A91"
                android:text="Send me emails about the best events happening nearby or online."

                />

            <Button
                android:id="@+id/finish_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#4F2A91"
                android:fontFamily="@font/cakecafe"
                android:text="Confirm"

                android:textSize="18sp"
                app:cornerRadius="20dp"
                android:layout_margin="10dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>